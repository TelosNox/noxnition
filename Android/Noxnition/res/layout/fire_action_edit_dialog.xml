<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/fireaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TriggerName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delay"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/fireaction_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/fireaction_Ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ok" />

    <Button
        android:id="@+id/fireaction_Up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Move up" />

    <Button
        android:id="@+id/fireaction_Down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Move down" />

    <Button
        android:id="@+id/fireaction_Delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />

</LinearLayout>